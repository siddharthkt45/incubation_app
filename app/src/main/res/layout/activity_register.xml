<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@drawable/round_layout_bg">

    <EditText
        android:id="@+id/editTextTextName"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Name"
        android:layout_marginTop="90sp"
        android:layout_marginBottom="10sp"
        android:textAlignment="center"
        android:ems="10"
        android:text="Full Name"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_edge"
        android:backgroundTint="#2051616A"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTextEmailAddressReg"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Email"
        android:textAlignment="center"
        android:drawableLeft="@drawable/login"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_edge"
        android:backgroundTint="#32C5B1B1"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextTextBranch"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Branch"
        android:layout_marginBottom="25sp"
        android:textAlignment="center"
        android:ems="10"
        android:text="Full branch name in capitals"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_edge"
        android:backgroundTint="#2051616A"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTextPassword2Reg"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Password"
        android:layout_marginBottom="45sp"
        android:textAlignment="center"
        android:ems="10"
        android:drawableLeft="@drawable/login2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_edge"
        android:backgroundTint="#2051616A"
        android:inputType="text" />


    <Button
        android:id="@+id/signupreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:backgroundTint="#3BB6CDDC"
        android:background="@drawable/round_edge"
        android:text="Sign Up" />



</LinearLayout>